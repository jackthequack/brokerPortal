<script>
    let element = document.getElementById("Dashboard header")
    element.style.display = "none"
</script>

<form action="/listings" method="POST">
  <h1> Add a Listing</h1>
  <input type="text" name="address" placeholder="address" required>
  <input type="text" name="city" placeholder="city" required>
  <input type="text" name="listprice" placeholder="list price" required>
  <input type="text" name="clientName" placeholder="Client Name" required>
  <input type="text" name="listDate" placeholder="listing date" required>
  <input type="text" name="status" placeholder="active? (y/n)" required>
  <button>Submit</button>
</form>

<h1>Here are your listings</h1>

<div class="table-responsive">
       <table class="table table-striped table-sm">
         <thead>
           <tr>
             <th>Address</th>
             <th>List price</th>
             <th>Client name</th>
             <th>Listing date</th>
             <th>Active (y/n)</th>

           </tr>
         </thead>
         <tbody>
           {{#each data}}
             <tr>
               <td>{{this.address}}</td>
               <td>{{this.listprice}}</td>
               <td>{{this.clientName}}</td>
               <td>{{this.listDate}}</td>
               <td>{{this.status}}</td>
             </tr>
           {{/each}}
         </tbody>
       </table>
     </div>
